pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "laundry_tubes_image"
        DOCKER_CONTAINER = "laundry_tubes_container"
    }

    stages {
        stage('Clone Repository') {
            steps {
                echo "Cloning repository..."
                git branch: 'main', url: 'https://github.com/Ghifari25/Laundry_Tubes.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                script {
                    sh '''
                    # Pastikan Dockerfile ada di root repository
                    if [ ! -f dockerfile ]; then
                        echo "dockerfile not found! Please add a Dockerfile to the repository."
                        exit 1
                    fi

                    # Build Docker image
                    docker build -t $DOCKER_IMAGE .
                    '''
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                echo "Running Docker container..."
                script {
                    sh '''
                    # Stop and remove existing container
                    docker stop $DOCKER_CONTAINER || true
                    docker rm $DOCKER_CONTAINER || true

                    # Run new container
                    docker run -d --name $DOCKER_CONTAINER -p 8000:8000 $DOCKER_IMAGE
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline failed. Please check the logs."
        }
    }
}
