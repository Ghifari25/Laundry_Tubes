pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "laundry_tubes_image"
        DOCKER_CONTAINER = "laundry_tubes_container"
    }

    stages {
        stage('Clone Repository') {
            steps {
                echo "Cloning repository..."
                git branch: 'main', url: 'https://github.com/Ghifari25/Laundry_Tubes.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                script {
                    sh '''
                    echo "=== Current Directory ==="
                    pwd

                    echo "=== Files in Directory ==="
                    ls -la

                    if [ ! -f Dockerfile ]; then
                        echo "Dockerfile not found! Exiting..."
                        exit 1
                    fi

                    echo "=== Starting Docker Build ==="
                    docker build -t ${DOCKER_IMAGE} .
                    '''
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                echo "Running Docker container..."
                script {
                    sh '''
                    # Stop and remove existing container if it exists
                    docker stop ${DOCKER_CONTAINER} || true
                    docker rm ${DOCKER_CONTAINER} || true

                    # Run new container
                    docker run -d --name ${DOCKER_CONTAINER} -p 8000:8000 ${DOCKER_IMAGE}
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline failed. Please check the logs."
        }
    }
}
