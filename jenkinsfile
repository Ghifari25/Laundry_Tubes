pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials-id')
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Ghifari25/Laundry_Tubes'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'docker build -t laundry_tubes:latest .'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                // Tambahkan langkah pengujian Anda di sini
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'DOCKERHUB_CREDENTIALS') {
                        sh 'docker push laundry_tubes:latest'
                    }
                }
            }
        }
    }
}
