pipeline {
    agent any

    environment {
        COMPOSE_PROJECT_NAME = "laundryy_syifa"
    }

    stages {

        stage("Checkout Repository") {
            steps {
                echo "Checking out GitHub repository..."
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], 
                          userRemoteConfigs: [[url: 'https://github.com/Ghifari25/Laundry_Tubes.git', 
                          credentialsId: 'github-credentials-id']]])
            }
        }

    stage("Validate Docker Compose") {
        steps {
            echo "Validating Docker Compose file..."
            sh 'docker-compose -f docker-compose.yml config'
        }
    }

        stage("Build Containers") {
            steps {
                echo "Building Docker containers..."
                sh 'docker-compose build'
            }
        }

        stage("Start Containers") {
            steps {
                echo "Starting Docker containers..."
                sh 'docker-compose up -d'
            }
        }

        stage("Run Tests") {
            steps {
                echo "Installing Composer dependencies..."
                sh 'docker-compose exec app composer install'
                
                echo "Generating application key..."
                sh 'docker-compose exec app php artisan key:generate'
                
                echo "Clearing and caching configuration..."
                sh 'docker-compose exec app php artisan config:clear'
                
                echo "Running database migrations..."
                sh 'docker-compose exec app php artisan migrate --force'
                
                echo "Running Laravel Tests..."
                sh 'docker-compose exec app php artisan test'
            }
        }

        stage("Stop Containers") {
            steps {
                echo "Stopping Docker containers..."
                sh 'docker-compose down'
            }
        }
    }

    post {
        always {
            echo "Cleaning up unused Docker resources..."
            sh 'docker system prune -f'
        }
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline execution failed. Please check the logs."
        }
    }
}
